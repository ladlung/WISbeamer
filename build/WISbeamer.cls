\ProvidesClass{WISbeamer}[2017/11/15 v1.0 template WIS Israel]
\PassOptionsToPackage{english}{babel}
\DeclareOption*{\PassOptionsToClass{\CurrentOption}{beamer}}
\ProcessOptions\relax

% % % % % % % % % % % % % % % % % % % % % % %
% % Load beamer class and referring options
% % % % % % % % % % % % % % % % % % % % % % %

\LoadClass[british,
				xcolor={table, dvipsnames},
				color=option,
				%trans,
				smaller,
				compress,
				professionalfonts,
				hyperref={bookmarks, colorlinks,linkcolor=WISgrey,urlcolor=WISorange}]{beamer}
				
% % % % % % % % % % % % % % % % % % % % % % %
% % Load additional packages
% % % % % % % % % % % % % % % % % % % % % % %
				
\RequirePackage[T1]{fontenc}
\RequirePackage{babel}
%% to convert .eps figures into pdf
\RequirePackage{epstopdf}

%% to color rules of tables
\RequirePackage{colortbl}

\RequirePackage{helvet}


% % % % % % % % % % % % % % % % % % % % % % %
% % Define colors
% % % % % % % % % % % % % % % % % % % % % % %

\definecolor{WISlightblue}{RGB}{54,169,225}
\definecolor{WISgrey}{RGB}{76,76,76}
\definecolor{WISblue}{RGB}{0,102,204}
\definecolor{WISorange}{RGB}{250,102,0}
\definecolor{WISlightgrey}{RGB}{235,235,235}


% % % % % % % % % % % % % % % % % % % % % % %
% % Set beamer template
% % % % % % % % % % % % % % % % % % % % % % %

\setbeamercolor{BodyBox}{fg=white,bg=WISgrey}
\setbeamercolor{BoxColor}{fg=WISgrey, bg=WISlightgrey}
\setbeamercolor{date}{fg=WISgrey}
\setbeamercolor{HeaderBox}{fg=black,bg=WISlightgrey}
\setbeamercolor{footline}{fg=white, bg=WISblue}
\setbeamertemplate{footline}{ %
	\hbox{%
	\begin{beamercolorbox}[wd=.30\paperwidth,ht=.35cm,dp=.75ex,left,leftskip=0.25cm]{BodyBox}%
    	\usebeamerfont{date in head/foot}\insertshortdate{} \hspace{2pt}  \vline{} \hspace{2pt} Page \insertframenumber{} \hspace{2pt}  \vline{}
	\end{beamercolorbox}%
	\begin{beamercolorbox}[wd=.60\paperwidth,ht=.35cm,dp=.75ex,left,leftskip=0.25cm]{BodyBox}%
    	\usebeamerfont{date in head/foot} \insertauthor{} \hspace{3em} \insertinstitute{}
	\end{beamercolorbox}%
	\begin{beamercolorbox}[wd=.10\paperwidth,ht=.35cm,dp=.75ex,right,rightskip=0.25cm]{WISlightgrey}%
    	\includegraphics[width=.75cm]{build/Logo-Hebrew.png}
	\end{beamercolorbox}}%
}

\setbeamercolor{item}{fg=WISorange}
\setbeamertemplate{itemize/enumerate body begin}{\footnotesize}
\setbeamertemplate{itemize/enumerate subbody begin}{\footnotesize}
\setbeamercolor{frametitle}{fg=white, bg=WISlightblue}
\setbeamerfont{frametitle}{size=\small}
\setbeamerfont{section number projected}{family=\sffamily,series=\bfseries,size=\small}
\setbeamercolor{title}{fg=white, bg=WISgrey}



\setbeamertemplate{blocks}[rounded][shadow=false]
\setbeamercolor{block title}{fg=white, bg=WISgrey}
\setbeamercolor{block body}{fg=black, bg=WISlightgrey}


% navigation bar in header 
\setbeamertemplate{headline}
	{%
		\begin{beamercolorbox}{section in head/foot}
			\vskip2pt\insertnavigation{\paperwidth}\vskip2pt
		\end{beamercolorbox}%
	}



\defbeamertemplate*{title page}{customized}[1][]
{
  	\hbox{%
	\begin{beamercolorbox}[wd=1\paperwidth,ht=1cm,dp=0.2em,left,leftskip=0.25cm]{white}%
    	\includegraphics[height=0.95cm]{build/wis_logo_wis_logo_eng_v1_black.png} \hspace*{8em}  \usebeamerfont{date}\usebeamercolor[WISgrey]{date}\tiny{\insertdate}  \\
	\end{beamercolorbox}%
	} 

	\begin{beamercolorbox}[wd=1\paperwidth,ht=.05cm,center]{footline}%
	\end{beamercolorbox}
	
	\vspace{2em}
	
	\begin{beamercolorbox}[wd=12cm, ht=7.2em, left, leftskip=1cm]{white}
		\usebeamerfont{title}\usebeamercolor[black]{title}\large{\inserttitle}
	\end{beamercolorbox}
	
	\vspace{3em}
 	
	\begin{beamercolorbox}[wd=1\paperwidth, ht=1cm, center]{white}
		\usebeamerfont{subtitle}\usebeamercolor[WISlightblue]{subtitle}\small{\insertsubtitle}
	\end{beamercolorbox}
	
	\vspace{5em}
	
}


\setbeamertemplate{enumerate items}[square]

%% switch off navigation bar
\setbeamertemplate{navigation symbols}{}	
			
\usetheme{default}
%\useoutertheme{default}
\useinnertheme{circles}
\usecolortheme{default}
\usefonttheme{structurebold}
